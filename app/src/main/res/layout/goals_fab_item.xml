<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="300dp"
        android:background="@color/ap_charcoal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goals_fab_item_textView_title1"
            android:text="Choose Your Goal"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#d7b7fd">
        </TextView>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:id="@+id/goals_Spinner"
            android:padding="20dp"
            android:entries="@array/goals_DL">
        </Spinner>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goals_editText_current"
            android:layout_margin="5dp"
            android:maxLength="10"
            android:inputType="number"
            android:hint="Enter Current Value"
            android:textSize="20sp">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goals_editText_target"
            android:layout_margin="5dp"
            android:maxLength="10"
            android:hint="Enter Target Value"
            android:inputType="number"
            android:textSize="20sp">
        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:id="@+id/goals_button_addGoal"
            android:text="Add Goal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/gradient_button">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>